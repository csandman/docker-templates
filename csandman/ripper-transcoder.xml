<?xml version="1.0"?>
<Container version="2">
  <Name>ripper-transcoder</Name>
  <Repository>csandman/ripper-transcoder</Repository>
  <Registry>https://hub.docker.com/r/csandman/ripper-transcoder/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>true</Privileged>
  <Support>https://hub.docker.comhttps://github.com/csandman/docker-ripper-transcoder/issues/r/csandman/ripper-transcoder/</Support>
  <Project>https://github.com/csandman/docker-ripper-transcoder</Project>
  <Overview>An automated solution for ripping DVDs and Blurays and transcoding them to a reasonable standard.</Overview>
  <Category>Backup: HomeAutomation: Tools: MediaApp:Video MediaServer:Video</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>/plugins/dynamix.docker.manager/images/question.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1584054873</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>An automated solution for ripping DVDs and Blurays and transcoding them to a reasonable standard.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir/>
      <ContainerDir>/out/transcodes</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir/>
      <ContainerDir>/out/rips</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir/>
      <ContainerDir>/out/incomplete</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>yes|no</Value>
      <Name>SAVE_SOURCE</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Save Source Video" Target="SAVE_SOURCE" Default="" Mode="" Description="Should the raw source video file be saved? (yes/no)" Type="Variable" Display="always" Required="true" Mask="false">yes|no</Config>
  <Config Name="Transcode Path" Target="/out/transcodes" Default="" Mode="rw" Description="The location to store the final transcoded movie files" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Rips Path" Target="/out/rips" Default="" Mode="rw" Description="The location to store the intermediate ripped movie files" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Incomplete Path" Target="/out/incomplete" Default="" Mode="rw" Description="The location to store the rips in progress" Type="Path" Display="always" Required="false" Mask="false"/>
  <Config Name="Optical Drive" Target="" Default="" Mode="" Description="The path of your optical drive" Type="Device" Display="always" Required="false" Mask="false">/dev/sr0</Config>
</Container>